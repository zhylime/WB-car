.flip-book
  background-color $col-white
  margin auto
  .page-wrapper
    -webkit-perspective 2000px
    -moz-perspective 2000px
    -ms-perspective 2000px
    -o-perspective 2000px
    perspective 2000px
  section
    height 100%
    a
      &:focus
        outline none
.flip-book
  .page
    background $col-lily-white
  .p2
  .p15
  .p19
  .p30
  .p33
    background $col-black
  .p34
  .p35
  .p36
    background $col-grey
.flip-icon
  width 40px
  height 40px
  position absolute
  right 0
  bottom 0
  z-index 99
  background url(../img/icon-flip.jpg)
  background-size 100% 100%
  animation flipIconAnimation 2s ease-out infinite
.isIphoneX .flip-icon
  width 50px
  height 50px
  animation flipIconAnimationX 2s ease-out infinite
.flip-path
  position absolute
  background url(../img/s6-path.png)
  width 150px
  height 150px
  top 58%
  left 48%
  transform translate(-50%, -50%)
  background-size cover
.flip-ball
  // background url(../img/s6-ball-2.png)
