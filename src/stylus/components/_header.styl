.c-header
  position absolute
  height 60px
  width 100%
  z-index 1000
  &__border
    height 6px
    width 100%
    position absolute
    bottom 0
    right 0
  &__logo
    position relative
    background black
    height 100%
    padding 10px 0 10px 40px
    img
      height calc(100% - 10px)
    .c-header__border
      background $col-athens-grey
  &__menu
    position absolute
    padding 20px
    background $col-athens-grey
    right 0
    top 0
    width 80%
    height 100%
    &:before
      content ""
      width 0px
      height 0px
      position absolute
      left 0
      top 0
      border-top 60px solid black
      border-right 32px solid transparent
    .c-header__border
      background black
      &:before
        content ""
        width 0px
        height 0px
        position absolute
        left 0
        top 0
        border-top 8px solid $col-athens-grey
        border-right 4px solid transparent
    ul
      display flex
      padding-left 20px
      position absolute
      top calc(50% - 7px)
      transform translateY(-50%)
      li
        list-style-type none
        color $col-delta
        a
          color $col-delta
          font-size 0.6rem
        span
          vertical-align middle
        &.active
          a
            color black
            font-weight bold