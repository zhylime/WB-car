@keyframes flipIconAnimation
  0%
    width 50px
    height 50px
  50%
    width 30px
    height 30px
  100%
    width 50px
    height 50px

@keyframes fadeInAnimation
  from
    opacity 0
  to
    opacity 1
@keyframes fadeInAnimationLast
  0%
    opacity 0
    transform scale(.9, 0.9)
  50%
    transform scale(1.1, 1.1)
  100%
    opacity 1
    transform scale(1, 1)
    
    
@keyframes fadeOutAnimation
  0%
    opacity 1
  99%
    opacity 1
  100%
    opacity 0

@keyframes ballAnimation
  0%
    transform rotate(0)
    top 42%
    left 30%
  30%
    transform rotate(270deg)
    top 50%
    left 38%
  60%
    transform rotate(540deg)
    top 55%
    left 45%
  85%
    transform rotate(810deg)
    top 60%
    left 55%
  100%
    transform rotate(1080deg)
    top 64%
    left 72%