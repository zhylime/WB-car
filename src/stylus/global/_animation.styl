@keyframes flipIconAnimation
  0%
    width 40px
    height 40px
  50%
    width 30px
    height 30px
  100%
    width 40px
    height 40px

@keyframes fadeInAnimation
  from
    opacity 0
  to
    opacity 1
@keyframes fadeInAnimationLast
  0%
    opacity 0
    transform scale(.9, 0.9)
  50%
    transform scale(1.1, 1.1)
  100%
    opacity 1
    transform scale(1, 1)
    
    
@keyframes fadeOutAnimation
  0%
    opacity 1
  99%
    opacity 1
  100%
    opacity 0

@keyframes ballAnimation
  0%
    opacity 0
    transform rotate(0)
    top -8%
    left 11%
  5%
    opacity 1
  25%
    transform rotate(270deg)
    top 15%
    left 23%
  50%
    transform rotate(540deg)
    top 32%
    left 34%
  75%
    transform rotate(810deg)
    top 53%
    left 54%
  95%
    opacity 1
  100%
    opacity 0
    transform rotate(1080deg)
    top 73%
    left 91%

@keyframes fadeAnimation
  0%
    opacity 0
  50%
    opacity 1
  100%
    opacity 0

@keyframes flipIntoLeft
  0%
    left -100%
  90%
    left -5%
  100%
    opacity 1
    left 0

@keyframes flipIntoRight
  0%
    left 100%
  90%
    left 5%
  100%
    opacity 1
    left 0